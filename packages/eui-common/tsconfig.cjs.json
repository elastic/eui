{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/cjs",
    "target": "es6",
    "module": "CommonJS",
    "lib": [
      "es6",
      "DOM"
    ],
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "lib/cjs/.tsbuildinfo",
    "importHelpers": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}