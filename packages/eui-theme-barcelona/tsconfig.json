{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["src"]
}
