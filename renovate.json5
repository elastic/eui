{
  extends: ['config:base'],
  ignorePaths: ['./.github/**'],
  enabledManagers: ['npm'],
  baseBranches: ['master'],
  prConcurrentLimit: 0,
  prHourlyLimit: 10,
  separateMajorMinor: false,
  rangeStrategy: 'bump',
  semanticCommits: false,
  vulnerabilityAlerts: {
    enabled: false,
  },
  npm: {
    lockFileMaintenance: {
      enabled: false,
    },
    packageRules: [
      {
        packagePatterns: ['.*'],
        enabled: false,
      },
      {
        groupName: '@elastic/charts',
        packageNames: ['@elastic/charts'],
        reviewers: ['team:datavis'],
        matchBaseBranches: ['master'],
        labels: ['dependencies'],
        automerge: true,
        enabled: true,
      },
    ],
  },
}
