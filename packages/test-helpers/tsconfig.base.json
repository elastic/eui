{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "../../node_modules/@testing-library"
    ],
    "types": [
      "jest",
      "jest-dom"
    ]
  },
}
