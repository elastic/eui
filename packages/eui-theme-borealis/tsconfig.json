{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "lib",
      "target": "ES2020",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "declaration": true,
      "sourceMap": true,
      "noEmitHelpers": true,
      "incremental": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "tsBuildInfoFile": "lib/.tsbuildinfo"
    },
    "include": ["src"],
    "exclude": ["node_modules"],
  }