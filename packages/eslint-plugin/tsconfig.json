{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/esm",
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "lib/esm/.tsbuildinfo"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}