#!/usr/bin/env bash

set -e

# Compile using base image from pre_command.sh
echo "Building docs using ${DOCKER_BASE_IMAGE} Docker image"
docker pull "$DOCKER_BASE_IMAGE"
docker run \
    --rm -i \
    --env HOME=/tmp \
    --"user=$(id -u)":"$(id -g)" \
    --volume "$PWD":/app \
    --workdir /app \
    "$DOCKER_BASE_IMAGE" \
    bash -c 'yarn && yarn build && yarn build-docs && yarn build-storybook'
